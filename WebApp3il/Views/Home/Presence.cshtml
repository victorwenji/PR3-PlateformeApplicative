
    @using System.Data
@using ApiEnd.Models;
@model DataTable;
@{ 
    var ListeEtudiant = ViewData["Etudiant"] as List<Etudiant>;
    var ListePresence = ViewData["Presence"] as List<Presence>;

    string GetStatus(bool Status)
    {
        if (Status == true)
        {
            return "Present";
        }
        else
        {
            return "Absent";
        }
    }

}
